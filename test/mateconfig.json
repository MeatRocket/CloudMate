{
    "builds": [{
            "name": "dev",
            "css": {
                "minify": false,
                "sourceMap": true
            },
            "js": {
                "minify": false,
                "sourceMap": true
            },
            "ts": {
                "declaration": true,
                "compilerOptions": {}
            }
        },
        {
            "name": "dist",
            "outDir": "dist",
            "outDirVersioning": true,
            "outDirName": true,
            "css": {
                "outDirSuffix": "css",
                "minify": true,
                "sourceMap": false
            },
            "js": {
                "outDirSuffix": "js",
                "minify": true,
                "sourceMap": false,
                "declaration": true
            },
            "ts": {
                "compilerOptions": {
                    "noImplicitAny": false,
                    "noEmitOnError": false,
                    "removeComments": true,
                    "target": "es5",
                    "lib": ["ES2015", "DOM"]
                }
            }
        }
    ],
    "files": [{
            "output": ["devfolder/yess.css"],
            "input": [
                "files/cssFile.css",
                "files/lessFile1.less",
                "files/lessFile2.less",
                "files/saasFile.scss"
            ],
            "builds": ["dev", "dist"]
        },
        {
            "output": ["devfolder/js/site.js"],
            "input": [
                "files/tsFile1.ts",
                "files/tsFile2.ts"
            ],
            "builds": ["dev", "dist"]
        },
        {
            "output": ["README.md"],
            "input": ["README.md"],
            "builds": ["dist"]
        }
    ]
}