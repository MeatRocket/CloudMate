{
    "format":{
        "path":[
            "files/*"
        ]
    },

    "builds": [{
            "name": "dev",
            "css": {
                "minify": false,
                "sourceMap": true
            },
            "js": {
                "minify": false,
                "sourceMap": true
            }
        },
        {
            "name": "dist",
            "outDir": "dist",
            "outDirVersioning": true,
            "outDirName": true,
            "css": {
                "outDirSuffix": "css",
                "minify": true,
                "sourceMap": false
            },
            "js": {
                "outDirSuffix": "js",
                "minify": true,
                "sourceMap": false,
                "declaration": true,
                "webClean": true
            }
        }
    ],
    "files": [{
            "output": "devfolder/yess.css",
            "input": [
                "files/cssFile.css",
                "files/lessFile1.less",
                "files/lessFile2.less",
                "files/saasFile.scss"
            ]
        }, {
            "output": "devfolder/site.js",
            "input": "files/jsFile1.js",
            "builds": ["dev", "dist"]
        },
        {
            "output": "devfolder/js/site.js",
            "input": [
                "files/tsFile1.ts",
                "files/tsFile2.ts"
            ],
            "builds": ["dev", "dist"]
        },
        {
            "output": "devfolder/variables.less",
            "input": "files/variables.less",
            "builds": ["dev", "dist"]
        },
        {
            "output": "README.md",
            "input": "README.md",
            "builds": "dist"
        }
    ]
}